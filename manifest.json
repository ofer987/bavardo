{
  "name": "Bravado",
  "description": "Add keyboard shortcuts to meetings on Microsoft Teams",
  "version": "0.1",
  "icons": {
    "64": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "persistent": false,
    "scripts": ["setCommands.js"]
  },
  "commands": {
    "open-roster": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Open the roster"
    },
    "open-chat": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "Open the chat"
    },
    "open-video": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "Turn video on"
    },
    "open-share": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Open the share tray"
    }
  },
  "manifest_version": 2
}
